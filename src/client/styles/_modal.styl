.react-redux-modal .rrm-holder{
    -webkit-transition: opacity .15s linear;
    transition: opacity .15s linear;
     -webkit-animation: holder-key-frame .15s; /* Safari 4.0 - 8.0 */
    animation: holder-key-frame;
}

.react-redux-modal .rrm-holder .scroll .rrm-content{
    -webkit-transition: all 0.5s ease-out;
    -moz-transition: all 0.5s ease-out;
    -o-transition: all 0.5s ease-out;
    transition: all 0.5s ease-out;
    //  -webkit-animation: content-key-frame; /* Safari 4.0 - 8.0 */
    // animation: content-key-frame;

      -webkit-animation: content-key-frame 0.7s; /* Safari 4.0 - 8.0 */
    animation: content-key-frame  0.7s;
}

/* Safari 4.0 - 8.0 */
@-webkit-keyframes content-key-frame {
    0%   { 
        opacity: 0;
        -webkit-transform: translate(0,-50%);
        -ms-transform: translate(0,-50%);
        transform: translate(0,-50%);
    }
    100% {    
        opacity: 1;
        -webkit-transform: translate(0,0);
        -ms-transform: translate(0,0);
        transform: translate(0,0);
    }
}

@keyframes content-key-frame {
    0%   { 
        opacity: 0;
        -webkit-transform: translate(0,-50%);
        -ms-transform: translate(0,-50%);
        transform: translate(0,-50%);
    }
    100% {    
        opacity: 1;
        -webkit-transform: translate(0,0);
        -ms-transform: translate(0,0);
        transform: translate(0,0);
    }
}

/* Safari 4.0 - 8.0 */
@-webkit-keyframes holder-key-frame {
    0%   { opacity: 0;}
    100% {opacity: 0.15;}
}

@keyframes holder-key-frame {
    0%   { opacity: 0;}
    100% {opacity: 0.15;}
}

