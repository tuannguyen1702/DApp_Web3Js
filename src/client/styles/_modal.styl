.bottom-right-content {
    background-color: #fff;
    color: #585858;
    padding: 15px 10px 16px 15px;
    margin-bottom: 10px;
    border-radius: 5px;
    &__header {
        text-align: right;
        > span:first-child {
            font-weight: 600;
            color: #DD4C4C;
            font-size: 13px;
            text-align: left;
            display: none;
        }
        .svg-icon-container .svg-icon {
            width: 15px;
            height: 10px;
            top: 3px;
            left: 5px;
            svg {
                fill: #585858;
            }
        }
        .svg-icon-container .svg-icon {
            transform: rotate(-180deg);
        }
        &.hidden  {
            > span:first-child {
                display: block;
                position: absolute;
                margin-top: 2px;
            }
            .svg-icon-container .svg-icon {
                transform: none;
            }
        }
    }
    &__content {
        padding-top: 5px;
        &:before, &:after {
            content: '';
            display: block;
            clear: both;
        }
    }
    &-icon {
        float: left;
        width: 80px;
        height: 80px;
    }
    &__content-right {
        width: calc(100% - 100px);
        float: left;
        padding-left: 20px;
        h5 {
            font-size: 18px;
            line-height: 20px;
            font-weight: 600;
        }
        .info-text {
            font-weight: 600;
        }
    }
}

