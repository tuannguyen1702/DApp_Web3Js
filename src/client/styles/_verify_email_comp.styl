.bottom-right-content-comp
  background #282828
  color $textColor
  padding 52px
  h3
    font-size 30px
    line-height 60px
    font-family $ProximaFont
    font-weight $boldWeight
    img
      display: inline-block;
      width: 25px;
      margin-top: -5px;
      margin-right: 15px;

  p
    font-family $ProximaFont
    font-weight $normalWeight
    font-size 16px
    line-height 18px
    a
      text-decoration none
      color $infoColor
      &:hover
        text-decoration underline
  button
    background $primaryColor
    border none
    color #1C1C1C
    font-family $ProximaFont
    font-weight $boldWeight
    font-size 16px
    line-height 18px
    border-radius 5px
    padding 12px 17px 10px
    cursor pointer
  @media $mediumDeviceDown
    padding 10px
    h3
      font-size 24px
      line-height 28px
    p
      font-size 14px
      line-height 20px