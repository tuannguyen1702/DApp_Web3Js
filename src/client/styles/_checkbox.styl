.inline-select {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-wrap: wrap;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    margin: 0 -5px;

    .form-check {
        -webkit-flex-basis: 0;
        padding-left: 5px;
        padding-right: 5px;
        -ms-flex-preferred-size: 0;
        flex-basis: 0;
        -webkit-box-flex: 1;
        -webkit-flex-grow: 1;
        -ms-flex-positive: 1;
        flex-grow: 1;

        > label {
            margin-bottom: 0;
        }

        &:max-4{
            max-width: 25%;
        }
    }
}

