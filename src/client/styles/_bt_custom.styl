.form-control {
    padding-top: $paddingControl;
    padding-bottom: $paddingControl;
} 
.btn {
    padding-left: 20px;
    padding-right: 20px;
    span{
        font-family: "Proxima-nova", 'Noto Sans', sans-serif;
    }
    
    &:hover:not([disabled]) {
        cursor: pointer;
    }

    font-size: 16px;
    line-height: 24px;
}
.form-control-label{
    font-weight: 600;
    font-size: 110%;
}

a:not([href]):not([tabindex]) {
    color: #1e56a0;
     &:hover {
        color: #1e56a0;
        cursor: pointer;
    }
}

.row{
    max-height: 100%;
}

.btn-group-lg>.btn, .btn-lg
{
    font-size: 18px;
}
.form-control-label + label {
    margin-top: 0;
}
.my-4 {
    border-style: dashed;
}

.form-control {
    display: block;
    width: 100%;
    padding: .5rem .75rem;
    font-size: 1rem;
    line-height: 1.25;
    color: #585858;
    background-color: #e4e4e4;
    background-image: none;
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 1px solid #e4e4e4;
    border-radius: .25rem;
    -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
}

.modal-content{
    background-color: $popupBgColor;
    color: $popupTextColor
}

.modal-header{
    border-bottom-color: #d0d0d0;
} 
.modal-footer{
    border-top-color: #d0d0d0;
}

.modal-header, .modal-body, .modal-footer {
    padding: 20px 25px;
}

a:not([href]):not([tabindex]) , a:hover:not([href]):not([tabindex]){
    color: inherit;
}

.popover-inner{
    padding: 5px 10px;
    color: $popupTextColor;
}

.card{
    background-color: transparent;
    text-align: left;
    border-color: #3F3F3F;
    height: 85%;
    font-size: 110%;
    margin-bottom: 30px;

    i{
        margin-right: 10px;
        color: #A3A3A3;
    }
}
.card-title{
    color: $primaryColor;
}

.card-link{
    color: $infoColor;
}

.input-group-text{
    background-color: #C4C4C4;
    border: 0;
}
.form-control {
    padding: 12px 0.75rem;
}
.btn {
    padding-top: 10px;
    padding-bottom: 10px;
}