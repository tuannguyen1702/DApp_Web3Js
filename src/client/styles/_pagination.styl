.pagination-container {
    height: 40px;
    .pagination-button {
        float: left;
        background: #585858;
        border-radius: 5px;
        width: 40px;
        height: 40px;
        text-align: center;
        display: table;
        cursor: pointer;
        margin-right: 5px;
        margin-left: 5px;
        &:hover {
            background: #CA8959;
            opacity: 0.8;
        }
        &.active {
            background: #CA8959;
        }
    }
    .pagination-3-dot {
        float: left;
        width: 40px;
        height: 40px;
        text-align: center;
        display: table;
        cursor: pointer;
        margin-right: 5px;
        margin-left: 5px;
        &:hover {
            opacity: 0.8;
        }
    }
    .pagination-padding {
        float: left;
        width: 10px;
        height: 1px;
    }
    .pagination-number {
        font-weight: Bold;
        font-size: 12px;
        color: white;
        vertical-align: middle;
        text-align: center;
        display: table-cell;
    }
    .pagination-img {
        margin: auto;
        text-align: center;
        vertical-align: middle;
        display: table-cell;
    }
}
