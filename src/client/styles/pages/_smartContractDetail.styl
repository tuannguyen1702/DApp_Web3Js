$textColor = #D8D8D8
$darkGreyColor =  #3E3E3E
$timelineBg = #3A3A3A

.btn-in-chart
  font-weight $boldWeight
  color white
  font-size 16px
  line-height 18px
  padding 14px 25px 13px
  margin-top 50px
.btn-in-chart:hover
  box-shadow none

.pie
  padding 0 40px
  &__container, &__labels
    display inline-block
    float left
  &:before, &:after
    content ''
    display table
    clear both

  // child-comp
  &__labels
    min-width 210px
    padding-right 26px
    margin-top 50px
    position relative

  &__container
    width 290px
    //height 290px
    position relative
    display inline-block
    font-family $ProximaFont
    font-weight $normalWeight

  &__label
    padding-left 40px
    padding-bottom 20px
    line-height 31px
    font-size 16px
    vertical-align middle
    color white
    *
      line-height 31px
      display inline-block
    .square
      font-size 0
      width 31px
      height 31px
      content ''
      display inline-block
      border-radius 5px
      position absolute
      left 0
    .number
      font-weight $boldWeight
      min-width 60px
      padding-right 30px

  &__figure
    width 100%
    margin 0 auto
    text-align center
    font-size 14px
    line-height 15px
    color #A3A3A3
    margin-top 20px

  &__bottom-block
    width 100%
    float left
    margin-left -40px

.pie-chart__container
  font-family $ProximaFont
  font-weight $normalWeight
  margin-top 44px
  h3
    font-size 30px
    line-height 34px
    margin-bottom 34px
    font-weight $boldWeight


////////// TIMELINE STYLING

label.progress-bar
  content ''
  display inline-block
  font-size 0
  line-height 14px
  position absolute
  left 25%
  top 50%
  transform translate(-50%, -50%)
  margin 0
  padding 0
  width calc(14px + 16px * 2)
  height calc(14px + 16px * 2)
  background-color rgba(#C0712D, 0.2)
  border-radius 100%

.triangle-bottom
  content ''
  display inline-block
  width 0
  height 0
  border-style solid
  border-width 15px 7px 0 7px
  border-color #2F2F2F transparent transparent transparent
  position absolute
  bottom -7px
  left 50%
  transform translateX(-50%)

.timeline
  position relative
  margin-top 100px
  .progress
    height 7px
    border-radius 22.5px
    position relative
    overflow visible
    margin 10px 0
    background-color $timelineBg
    border-radius 0

    &:before
      content ''
      display inline-block
      position absolute
      width 2px
      height 20px
      background #CA8959
      left 0
      top -5px

    &:after
      content ''
      display inline-block
      position absolute
      width 2px
      height 20px
      background #CA8959
      right 0
      top -5px

    &-bar
      height 8px
      border-radius 3px 4px 4px 4px
      background $timelineBg

  .top_popup
    display inline-block
    position absolute
    top -90px
    left 25%
    transform translateX(-50%)
    border-radius 3px
    padding 7px 10px
    line-height 16px
    background #CA8959
    font-family $ProximaFont
    font-weight $normalWeight
    font-size 14px
    color #1C1C1C
    white-space nowrap
    text-align center
    strong
      font-weight $boldWeight
    &:after
      @extend .triangle-bottom
      border-color #CA8959 transparent transparent transparent

  label
      @extend label.progress-bar
      &:before
        @extend label.progress-bar
        width calc(14px + 8px * 2)
        height calc(14px + 8px * 2)
        background rgba(#D9A177, 1)
        left 50%
      &:after
        @extend label.progress-bar
        width 14px
        height 14px
        background #FFFFFF
        left 50%



  .cliff
    display -ms-flexbox
    display flex
    -ms-flex-direction column
    flex-direction column
    -ms-flex-pack center
    justify-content center
    color #fff
    text-align center
    white-space nowrap
    background-color #7B2A2A
    transition width .6s ease
    height 8px
    position absolute
    left 0

  &__date
    display flex
    justify-content space-between
    margin-top 25px
    position relative

    .start-date
      text-align left

    .middle-date
      text-align center
      position absolute
      transform translateX(-50%)
      &:before
        display inline-block;
        content ''
        position absolute
        width 2px
        height 20px
        background #CA8959
        top -37px
        left 50%
        transform translateX(-50%)

    .end-date
      text-align right


