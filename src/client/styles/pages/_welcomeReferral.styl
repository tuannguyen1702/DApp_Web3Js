.table--bonus
  max-width 700px
  margin 0 auto
  table-layout fixed
  border 1px solid #979797
  border-radius 5px
  border-collapse separate
  border-spacing 0
  margin-bottom 65px
  thead th
    vertical-align top
    p
      font-weight 400
  td, th
    border 0
  tr td
    border-top 1px solid #979797
    padding 15px 20px !important
  tr th
    padding 15px 20px !important
  tr th:first-child, tr td:first-child
    border-right 1px solid #979797
  .last-row
    td
      font-size 18px
      font-weight bold
      color #CA8959

.simulate-calc-tool
  background #F4F4F4
  color #585858
  h4
    color #0EACF4
    font-weight 600
    font-size 30px
    line-height 34px
    margin-bottom 20px
    text-align center
  .form-calc
    max-width 1000px
    margin 0 auto 30px auto
  .form-group
    margin-bottom 0

  .btn-blue
    background-color #0EACF4
    color #FFFFFF
    font-weight 600
    border-radius 5px
    border 0
    display inline-block
    white-space nowrap
    padding 8px 15px
    margin-top 30px
    cursor pointer
    width 100%

  .result-calc
    background-color #F0F3F4
    box-shadow inset 0 1px 7px 0 rgba(0,0,0,0.14)
    padding-top 60px
    padding-bottom 45px
    transform scaleY(0)
    transform-origin top
    transition transform 0.5s ease-in-out
    &.shown {
      transform scaleY(1)
    }
    //background-image url("../images/icon-arrow-inset.png")
    table
      table-layout: fixed;
      text-align: center;te
      margin-bottom 30px
      tr th
        color #000000
        font-weight 600
        font-size 16px
      tr td
        font-size 20px
        //&:last-child
        //  &:before
        //    content '~'
        //    display inline-block
        //    position absolute
        //    left 0
      tbody tr
        position relative
      tbody tr td.seperator
        width: 100%
        background-image linear-gradient(-90deg, #F0F3F4 0%, #7F7F7F 32%, #9E9F9F 66%, #F0F3F4 100%)
        padding: 0;

      tbody tr.last-row
        background-image: linear-gradient(-90deg, #F0F3F4 0%, #E8FAFF 32%, #E8FAFF 66%, #F0F3F4 100%);
        td
          color #0EACF4
          font-weight 600

  .form-control
    background #FFFFFF
  label
    font-weight 600
    color #000
  input[name="numberReferral"], input[name="numberTokens"] + input
    font-weight 600
  input[name="numberTokens"] + input
    color #0EACF4
    + .input-group-append .input-group-text
      background white
      border 1px solid #e4e4e4
      border-left 0
      font-weight 600
      color #A3A3A3

