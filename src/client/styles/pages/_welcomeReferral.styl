.referral .main-content
  padding 0
  min-height auto
  margin-top 0
  max-width 1000px
  width 100%
.referral .logo-container
  top 20px
  line-height 0
.banner-referral
  background #080604
.banner-referral .main-content
  margin-top: $headerHeight;
.banner_content
  text-align center
  padding-bottom 40px
  h4
    color #CA8959
    font-weight 600
    font-size 25px
    line-height 28px
    margin-top 37px
  h3
    color #A3A3A3
    font-weight 600
    font-size 40px
    line-height 45px
    span
      color #FFFFFF

.banner_steps
  list-style none
  padding 0
  margin-top 30px
  min-width 1000px
  &--scrollable
    max-width 100%
    overflow-x scroll
    -webkit-overflow-scrolling touch
    &::-webkit-scrollbar
      display none
  li
    display inline-block
    font-size 0
    width 33.3333%
    vertical-align top
    padding 0 20px
    p
      font-size 14px
      &.bold
        font-weight 600
        color #FFFFFF
        margin-bottom: 10px;
        font-size: 16px
        
  .icon-wrapper
    margin-bottom 18px
    .svg-icon-container
      display inline-block
      width 60px
      height 60px
      padding-left 0
      background #CA8959
      border-radius 50%
    .svg-icon
      left 50%
      top 50%
      transform translate(-50%, -50%)
.join-for-free-btn
  min-width 227px
  background-image linear-gradient(-180deg, #20D6FA 0%, #0E76F4 100%)
  box-shadow 0 2px 4px 0 rgba(0,0,0,0.50)
  color white
  height 55px
  display inline-block
  border-radius 30px
  line-height 55px
  padding 0 10px
  position relative
  text-align center
  &:hover, &:hover span
    text-decoration none
  span
    font-size 18px
    font-weight 700
    text-transform uppercase
    color #FFFFFF
    letter-spacing 0
    text-align center
    text-shadow 0 2px 4px #0D5B95
  &:after
    content ''
    display inline-block
    background url("../images/join-for-free-shadow.png")
    width 233px
    height 70px
    position absolute
    bottom -30px
    left 50%
    transform translateX(-50%)
    z-index 1

.master-page.referral .header
  left 0
  
.program-detail
  //margin-left -15px
  //margin-right -15px
  background #F4F4F4
  color #1C1C1C
  padding-top 43px
  .heading-center
    text-align center
    color #CA8959
    font-weight 600
    font-size 30px
    line-height 34px
    margin-bottom 30px
    + p
      font-size 14px
      line-height 16px
