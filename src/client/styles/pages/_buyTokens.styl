.heading-buy-token
  text-transform none
  text-align center
  color #ca8959
  font-size 18px
  margin-bottom 15px
.wallets-plugin
  h4
    text-transform none
    text-align center
    color #CA8959
    font-size 18px
    margin-bottom 25px
  .separator
    background-color white
    width 100%
    height 1px
    position relative
    margin 30px auto 40px
    span
      display inline-block
      background-color #2f2f2f
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      padding 0 20px
  .nav-link
    text-align center
    color #A3A3A3
    &:hover
      color white
    img
      width 40px
      padding-right 10px
  .plugins
    margin-bottom 30px
    .nav-item
      border-right 1px solid #979797
      width 33.3333%
    .nav-item:last-child
      border-right 0

.heading-progress
  color #D8D8D8
  font-size 16px
  font-weight 600
  text-align center
.btn-info--orange
  background-color #CA8959
  border-color #CA8959
  color #FFFFFF
  &:hover, &:focus
    background-color transparent
    color #CA8959
    border-color #CA8959

.btn-info--orange
  .svg-icon g g
    fill #FFFFFF
  &:hover .svg-icon g g
    fill #CA8959
.CountdownCrowsale
  .Countdown
    text-align center
    border: 0.5px solid #5F5F5F;
    border-radius: 5px;
    padding: 15px;
    max-width: 373px;
    margin: 10px auto;
    .Countdown-col
      //border-right 0.5px solid #5F5F5F
      position relative
      min-width 85px
      &:after
        display block
        content ''
        position absolute
        width 1px
        height 100%
        right 0
        top 0
        background-color #5F5F5F
      &-element strong
        font-size 30px
        line-height 30px
        color white
        padding-right 23px
        padding-left 23px
      &-element span
        font-size 13px
        color #757575
      &:last-child
        border-right 0
        &:after
          display none
.disabled-steps
  position relative
  opacity 0.25
  pointer-events: none;
  &:before
    position absolute
    content: ''
    width 100%
    height 100%
    top: 0
    background rgba(#000, 0.1)